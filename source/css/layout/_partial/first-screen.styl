$first-screen-font-size = 1.5rem
$first-screen-icon-size = 1.8rem

$first-screen-font-size2 = 2rem
$first-screen-icon-size2 = 1.8rem

$first-screen-font-size3 = 3.8rem
$first-screen-icon-size3 = 1.8rem

$first-screen-font-size4 = 6rem
$first-screen-icon-size4 = 1.8rem



$temp-img = hexo-config('style.first_screen.background_img')
$first-screen-img = $temp-img ? $temp-img : ''

$temp-font-color = hexo-config('style.first_screen.font_color')
$first-screen-font-color = $temp-font-color ? convert($temp-font-color) : var(--text-color-3)

$temp-font-color2 = hexo-config('style.first_screen.font_color2')
$first-screen-font-color2 = $temp-font-color2 ? convert($temp-font-color2) : var(--text-color-3)


$first-screen-font-color3 =  var(--text-color-3)

.first-screen-container {
 
  position relative
  box-sizing border-box


  /*aquí modifiqué*/
  /*height 100vh*/
  height 62vh
    
 
  /*aquí modifiqué*/
  /*margin-top 10vh*/
  top 80px

  margin-left auto
  margin-right auto  
             
  /*background-size cover
  background-position center center
  background-repeat no-repeat */ 
   
  overflow hidden

  /*aquí modifiqué*/
  background url($first-screen-img) center center / contain no-repeat


  if (!(hexo-config('style.first_screen.header_transparent') == true)) 
  {
    background-position-y $header-height

    +keep-tablet() {
      background-position-y $header-height * 0.9
    }

    +keep-mobile() {
      background-position-y $header-height * 0.8
      
    }
    
  }

  .content {
    position relative
    box-sizing border-box
    /*width 100%*/
    height 90%
    padding-top 1rem

    .description {
      color $first-screen-font-color
      font-weight bold
      font-size $first-screen-font-size
      line-height 1.8
      text-align center

      .desc-item 
      {
        font-size $first-screen-font-size2
        color $first-screen-font-color2
        font-family: "typewcond"
      }



       .desc-item2 
       {        
        font-size $first-screen-font-size4
        color $first-screen-font-color3
        font-family: "trashhand"           
      }

      +keep-tablet() {
        
        font-size $first-screen-font-size * 0.9
      }

      
      +keep-mobile() {

         /*aquí modifiqué*/
        /*height 100%
        padding-top 3rem*/
    
        .desc-item 
        {
          font-size $first-screen-font-size
        }

        .desc-item2 
        {        
          font-size $first-screen-font-size3         
          
        }
      }
    
      /*aquí modifiqué*/
      /*
      +keep-tablet() {
          height 100%
          padding-top 3rem        

        
      }*/

      
    }


    .s-icon-list {
      position absolute
      bottom 0
      display flex
      box-sizing border-box
      font-size $first-screen-icon-size

      +keep-tablet() {
        font-size $first-screen-icon-size * 0.9

        
      }

      .s-icon-item {
        margin 0 1rem
        cursor pointer

        i {
          color var(--text-color-3)
        }
      }
    }
  }
}
